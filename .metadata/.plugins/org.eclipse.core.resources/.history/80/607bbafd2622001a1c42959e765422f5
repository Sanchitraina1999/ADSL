	cout<<"\n4. Check two binary trees are equal or not";
	cout<<"\n5. Tree Traversals";
	cout<<"\n6. Print internal and leaf nodes";
	cout<<"\n Enter your choice";
	int choice; 	cin>>choice;
	switch(choice){
	case 1:
		t.create();
		break;
	case 2:
		t.copyTree();
		break;
	case 3:
		t.mirrorImage();
